# ============================================
# ORDERHUB BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this to .env and fill in your values

# App Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:5000

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=orderhub
DB_USER=orderhub_user
DB_PASSWORD=your_strong_password_here

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=change-this-to-another-random-secret-key-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Payment (Use test keys for development)
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service - RESEND (FREE 3,000 emails/month)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=OrderHub

# SMS Service - Twilio (Optional - has free trial with $15 credit)
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# File Upload (Local storage for now - AWS S3 optional)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=another-random-secret-for-sessions

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_EMAIL=true
ENABLE_SMS=false
